---
import { socialLinks } from '@/data/socials-data'
import '@/components/utils/socials.css'
---

<section id="Location" class="border-white/20 border-b">
  <div class="mx-auto p-8 border-white/20 border-x max-w-7xl">
    <div class="mb-8">
      <p class="text-white font-display uppercase text-3xl lg:text-6xl">
        Encuéntranos
      </p>
    </div>
    <div
      class="flex flex-col md:grid grid-cols-4 text-white text-xs mx-auto p-8 items-center justify-items-center gap-4"
    >
      <div
        class="col-span-3 relative justify-center items-center w-full h-96 min-h-[300px] bg-zinc-200 dark:bg-zinc-800 rounded-lg overflow-hidden"
      >
        <iframe
          loading="lazy"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3307.891145175776!2d-118.4779491232464!3d33.99532967317856!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2bacf4578353b%3A0x475106ed00e39b87!2sGold's%20Gym%20Venice!5e0!3m2!1ses!2ses!4v1738773484256!5m2!1ses!2ses"
          width="100%"
          height="100%"
          allowfullscreen=""
          referrerpolicy="no-referrer-when-downgrade"
          class="absolute inset-0"></iframe>
      </div>
      <div class="flex flex-col justify-between p-4 rounded-lg">
        <div class="text-center mb-4">
          <h3 class="text-lg font-semibold mb-2">Contáctanos en:</h3>
          <div class="flex flex-row md:flex-col gap-4 items-center">
            {
              socialLinks.map((social) => (
                <a
                  key={social.label}
                  class="Btn"
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <span class="svgContainer">
                    <social.icon class="w-8 h-8" />
                  </span>
                  <span class="BG" style={{ background: social.bg }} />
                </a>
              ))
            }
          </div>
        </div>
        <div class="text-center text-sm">
          <p>Lun - Vie: 9:00 - 21:00</p>
          <p>Sáb - Dom: Cerrado</p>
        </div>
      </div>
    </div>
  </div>
</section>
