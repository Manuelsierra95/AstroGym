---
import Banner from '@/components/landing/Banner.astro'
import Testimonials from '@/components/utils/Testimonials.astro'
import { Image } from 'astro:assets'
import Logo from '/public/logo.webp'
---

<section class="border-white/20 border-b">
  <div class="mx-auto border-white/20 border-x max-w-7xl">
    <div class="mx-auto">
      <div
        class="mx-auto min-h-[500px] md:min-h-[600px] pt-28 gradient-grid px-8 py-12 relative overflow-hidden"
      >
        <div
          class="absolute inset-0 flex items-center justify-center opacity-40"
        >
          <Image
            src={Logo}
            alt="logo"
            class="w-[800px] pointer-events-none object-contain"
          />
        </div>

        <div class="relative z-10 flex flex-col items-center text-center">
          <h1
            class="text-white font-display uppercase text-6xl md:text-7xl ml:text-8xl lx:text-8.5xl xl:text-9xl"
          >
            <span class="block">Astro</span>
            <span class="block">FITNESS CLUB</span>
          </h1>
          <h2
            class="text-white font-display uppercase text-xl md:text-2xl lg:text-3xl mt-12"
          >
            Box de Crossfit en Astro
          </h2>
        </div>
      </div>
    </div>
    <Banner />
    <Testimonials />
  </div>
</section>
