---
import ClassCard from '@/components/utils/ClassCard.astro'
import { activities } from '@/data/activities-data'
---

<div class="container mx-auto py-12 px-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {activities.map((activity: any) => <ClassCard title={activity.title} icon={activity.icon} price={activity.price} />)}
  </div>
</div>
